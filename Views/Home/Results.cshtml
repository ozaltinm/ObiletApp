@model ObiletApp.Models.ViewModels.JourneySearchResultViewModel

@{
    ViewData["Title"] = "Search Results";
}

<!-- Başlık bölümü -->
<div class="bg-primary text-white p-3 mb-4 rounded">
  <div class="h5 mb-1">
     @($"{Model?.Origin?.Name} → {Model?.Destination?.Name}")
  </div>
  <div class="small">
    @Model?.JourneyDate
  </div>
</div>

<!-- Kart listesi -->
<div class="row g-3">
  @foreach (var j in Model.Journeys)
  {
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex align-items-center">
          
          <!-- Kalkış / Varış -->
          <div class="me-4 text-center">
            <div class="fw-bold small text-muted">KALKIŞ</div>
            <div class="h5 mb-0">@j.Departure</div>
          </div>
          <div class="me-auto text-center">
            <div class="fw-bold small text-muted">VARIŞ</div>
            <div class="h5 mb-0">@j.Arrival</div>
          </div>
          
          <!-- Fiyat -->
          <div>
            <span class="badge bg-danger px-3 py-2 fs-6">
              @j.InternetPrice
            </span>
          </div>
        </div>
        
        <!-- Alt satır: istasyonlar -->
        <div class="card-footer bg-white border-top-0">
          <small class="text-muted">
            @j.OriginLocation &nbsp;–&nbsp; @j.DestinationLocation
          </small>
        </div>
      </div>
    </div>
  }
</div>
